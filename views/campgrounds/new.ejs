<%- include("../partials/header") %>
<div class="container jump">
    <h1 style="text-align: center;"  class="d-block mb-5"> Add your Venue</h1>
    <div style="text-align: center; "><h4>Add your venue to marketplace for meeting and event spaces.</h4>
      <h4>  No monthly or annual fees or commitment periods!</h4></div>
    
    <div class="row">
        <div style="width: 30%; margin: 25px auto; ">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image Url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Price" name="price" min="200" step="50">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Description" name="description">
                </div>
                <div class="form-group"> <button class="btn btn-success btn-lg btn-block">Submit</button></div>
            </form>
            <a href="/campgrounds" class="btn btn-secondary btn-lg btn-block"> Back </a>
        </div>
    </div>

</div>
<%- include("../partials/footer") %>